@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    int count = 1;
}


<div class="text-center">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Stadium</th>
                <th scope="col">Founded</th>
            </tr>
        </thead>
        @foreach (var item in Model.Teams!)
        {
            <tbody>
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Stadium</td>
                    <td>@item.Founded</td>
                </tr>
            </tbody>
            count += 1;
        }
    </table>
</div>

