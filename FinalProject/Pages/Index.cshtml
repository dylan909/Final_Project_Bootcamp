@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    int count = 1;
}


<div class="text-center">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">FavProgrammingLang</th>
                <th scope="col">CurrentlyEnrolled</th>
            </tr>
        </thead>
        @foreach (var item in Model.Apprentices!)
        {
            <tbody>
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.FavProgrammingLang</td>
                    <td>@item.CurrentlyEnrolled</td>
                </tr>
            </tbody>
            count += 1;
        }
    </table>
</div>

