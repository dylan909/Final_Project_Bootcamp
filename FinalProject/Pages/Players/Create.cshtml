@page "{id?}"
@model FinalProject.Pages.Players.CreateModel
@{
    ViewData["Title"] = "Create a Player";
}
<h1>Create</h1>

<h4>Players</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="alloftheplayer.Name" class="control-label"></label>
                <input asp-for="alloftheplayer.Name" class="form-control" />
                <span asp-validation-for="alloftheplayer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="alloftheplayer.Age" class="control-label"></label>
                <input asp-for="alloftheplayer.Age" class="form-control" />
                <span asp-validation-for="alloftheplayer.Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="alloftheplayer.OnForm" /> @Html.DisplayNameFor(model => model.alloftheplayer.OnForm)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="alloftheplayer.Position" class="control-label"></label>
                <input asp-for="alloftheplayer.Position" class="form-control" />
                <span asp-validation-for="alloftheplayer.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="alloftheplayer.Goals" class="control-label"></label>
                <input asp-for="alloftheplayer.Goals" class="form-control" />
                <span asp-validation-for="alloftheplayer.Goals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
