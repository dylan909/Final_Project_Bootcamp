@page
@model razorPageFinalProject.Pages.Players.IndexModel
@{
    ViewData["Title"] = "All Players";
}

<div class="jumbotron p-3">
  <div class="d-flex align-items-center">
    <h1 class="display-4 flex-grow-1">
      Player List
    </h1>

    <a class="btn btn-primary btn-sm" asp-page="./Edit">
            Edit
    </a>
  </div>
</div>


<div class="d-flex bg-primary text-white">
    <div class="p-2" style="flex:0 0 10%">
        ID
    </div>
    <div class="p-2" style="flex:1 0 auto">
        Name
    </div>
    <div class="p-2" style="flex:0 0 25%">
        Options
    </div>
</div>
@foreach (var item in Model.AllPlayers)
{
      <div class="d-flex border-left border-right border-bottom border-primary">
        <div class="p-2" style="flex:0 0 10%">
            @item.PlayersId
        </div>
        <div class="p-2" style="flex:1 0 auto">
            @item.Name
        </div>
    <form method="post" class="p-2 btn-group" style="flex:0 0 25%" role="group" >
            <a class="btn btn-primary btn-sm" asp-page="./Detail" asp-route-id="@item.PlayersId">
        Details
      </a>
            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.PlayersId">
      
        Edit
      </a>
      <input type="submit" value="Delete" class="btn btn-danger btn-sm"/>

            <input type="hidden" name="ID" value="@item.PlayersId" />
    </form>
  </div>
}